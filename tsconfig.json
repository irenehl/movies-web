{
    "compilerOptions": {
        "baseUrl": "./src",
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "paths": {
            "@components/*": ["components/*"],
            "@pages/*": ["pages/*"],
            "@services/*": ["services/*"],
            "@models/*": ["models/*"],
            "@hooks/*": ["hooks/*"],
            "@router/*": ["router/*"],
            "@form/*": ["form/*"],
            "@assets/*": ["assets/*"]
        }
    },
    "include": [
        "src",
        "**/*.cjs",
        "**/*.ts"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}